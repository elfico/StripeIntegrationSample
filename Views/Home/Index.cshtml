@{
    ViewData["Title"] = "Home Page";
}

<section class="">
    <h1 class="display-4 text-center">Welcome</h1>
    <div class="row justify-content-center mt-4">
        <form class="col-md-4 col-sm-6" method="post">
            <div class="form-group">
                <label class="form-label">Amount to pay</label>
                <input name="Amount" type="number" min="1000" class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <label class="form-label">Email</label>
                <input name="CustomerEmail" type="email" class="form-control" required />
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary col-12">Pay</button>
            </div>
        </form>
    </div>
</section>
